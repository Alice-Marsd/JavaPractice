package com.competition;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		int num=0;
		String str="";
		while(scan.hasNextInt())
		{
			num=scan.nextInt();
			Competition(num);
		}
	}

	private static void Competition(int num) {
		if(num<=0) return ;
		int i=1,j=num;
		while(num!=0)
		{
			System.out.print("(");
			num=num/2;
		}
	}

}
