package com.countNum;

import java.util.Scanner;

public class Main {

	
	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		String str=null;
		int c=0;
		int cnt=0;
		while(scan.hasNextLine())
		{
			str=scan.nextLine();
			c=scan.nextInt();
			cnt=countNum(str,c);
			
		}
	}

	private static int countNum(String str, int c) {
		int i;
		int[] alph=new int[26];
		for(i=0;i<str.length();++i)
		{
			int cc=str.charAt(i);
			if(cc<='z' && cc>='a')
				alph[cc-'a']++;
			else if(cc<='Z' && cc>='A')
				alph[cc-'A']++;
		}
		if(c<='z' && c>='a')
			return alph[c-'a'];
		else 
			return alph[c-'A'];
		
	}
}
